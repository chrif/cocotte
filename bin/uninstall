#!/bin/sh

set -eu

if [ "$1" = 'test' ]; then
    set -a
    . ../.env
    set +a
    shift
fi

docker run -it --rm \
    -e MACHINE_NAME="${MACHINE_NAME}" \
    -v "$(pwd)":/host \
    -v /var/run/docker.sock:/var/run/docker.sock:ro \
    chrif/cocotte:${INSTALLER_VERSION} uninstall \
    --digital-ocean-api-token="${DIGITAL_OCEAN_API_TOKEN}" \
    --traefik-ui-hostname="${TRAEFIK_UI_HOSTNAME}" \
    "$@"
