#!/bin/sh

set -eu

if [ "$1" = 'test' ]; then
    set -a
    . ../.env
    set +a
    shift
fi

docker run -it --rm \
    -v "$(pwd)":/host \
    -v /var/run/docker.sock:/var/run/docker.sock:ro \
    chrif/cocotte uninstall \
    --digital-ocean-api-token="${DIGITAL_OCEAN_API_TOKEN}" \
    --machine-name="${MACHINE_NAME:-cocotte}" \
    --machine-storage-path="${MACHINE_STORAGE_PATH:-"$(pwd)/machine"}" \
    --traefik-ui-hostname="${TRAEFIK_UI_HOSTNAME}"

